<Window x:Class="PoeSuite.TextBoxPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoeSuite"
        mc:Ignorable="d"
        Title="TextBoxPrompt" Height="125.977" Width="243.497">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <TextBlock Margin="10,5,10,10" ><Run Text="Enter your PoE account name."/><LineBreak/><Run Text="(not any character name)"/></TextBlock>
            <StackPanel Orientation="Horizontal" Height="31">
                <TextBox Height="Auto" Margin="5" TextWrapping="Wrap" x:Name="ResponseTextBox" Width="143" />
                <Button HorizontalAlignment="Right"  Height="Auto" Margin="5" Content="OK" Click="OKButton_Click" Width="53" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
