<Window
    x:Class="PoeSuite.TextBoxPrompt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PoeSuite"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TextBoxPrompt"
    Width="243.497"
    Height="125.977"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="5" Orientation="Vertical">
            <TextBlock x:Name="TextField" Margin="10,5,10,10"><Run Text="Enter your PoE account name." /><LineBreak /><Run Text="(not any character name)" /></TextBlock>
            <StackPanel Height="31" Orientation="Horizontal">
                <TextBox
                    x:Name="ResponseTextBox"
                    Width="143"
                    Height="Auto"
                    Margin="5"
                    TextWrapping="Wrap" />
                <Button
                    Width="53"
                    Height="Auto"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Click="OKButton_Click"
                    Content="OK" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
